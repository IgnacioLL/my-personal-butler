FROM openjdk:11-jdk

# Set environment variables
ENV ANDROID_HOME=/opt/android-sdk
ENV ANDROID_SDK_ROOT=/opt/android-sdk
ENV JAVA_HOME=/usr/local/openjdk-11
ENV GRADLE_HOME=/opt/gradle
ENV PATH=$PATH:$ANDROID_HOME/platform-tools:$ANDROID_HOME/tools:$ANDROID_HOME/cmdline-tools/latest/bin:$GRADLE_HOME/bin

# Install required packages
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    curl \
    git \
    build-essential \
    libc6-dev \
    libstdc++6 \
    libgcc1 \
    libncurses5 \
    libtinfo5 \
    libz1 \
    libssl-dev \
    libffi-dev \
    python3 \
    python3-pip \
    xvfb \
    x11vnc \
    fluxbox \
    xterm \
    && rm -rf /var/lib/apt/lists/*

# Install additional packages for Android development
RUN apt-get update && apt-get install -y \
    android-tools-adb \
    && rm -rf /var/lib/apt/lists/*

# Download and install Gradle
RUN wget -q https://services.gradle.org/distributions/gradle-7.6-bin.zip -O /tmp/gradle.zip \
    && unzip -q /tmp/gradle.zip -d /opt \
    && ln -s /opt/gradle-7.6 /opt/gradle \
    && rm /tmp/gradle.zip

# Download Android SDK
RUN wget -q https://dl.google.com/android/repository/commandlinetools-linux-8512546_latest.zip -O /tmp/commandlinetools.zip \
    && mkdir -p $ANDROID_HOME/cmdline-tools \
    && unzip -q /tmp/commandlinetools.zip -d $ANDROID_HOME/cmdline-tools \
    && mv $ANDROID_HOME/cmdline-tools/cmdline-tools $ANDROID_HOME/cmdline-tools/latest \
    && rm /tmp/commandlinetools.zip

# Accept licenses and install Android SDK components
RUN yes | $ANDROID_HOME/cmdline-tools/latest/bin/sdkmanager --licenses
RUN $ANDROID_HOME/cmdline-tools/latest/bin/sdkmanager \
    "platform-tools" \
    "platforms;android-33" \
    "build-tools;33.0.0" \
    "system-images;android-33;google_apis;x86_64" \
    "emulator" \
    "extras;android;m2repository" \
    "extras;google;m2repository"

# Create Android Virtual Device
RUN echo "no" | $ANDROID_HOME/cmdline-tools/latest/bin/avdmanager create avd \
    -n test_device \
    -k "system-images;android-33;google_apis;x86_64" \
    --force

# Configure emulator settings
RUN mkdir -p /root/.android/avd/test_device.avd
COPY configs/android-emulator.conf /root/.android/avd/test_device.avd/config.ini

# Install ADB and other tools
RUN $ANDROID_HOME/cmdline-tools/latest/bin/sdkmanager "platform-tools"

# Create workspace directory
RUN mkdir -p /workspace/app

# Set working directory
WORKDIR /workspace

# Create workspace for scripts
RUN mkdir -p /workspace/scripts

# Expose ports
EXPOSE 5555 8080

# Default command
CMD ["/bin/bash"]
